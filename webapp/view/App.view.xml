<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="de.integrata.training.controller.App"
	xmlns="sap.m">
	<App>
		<pages>
			<Page title="{i18n>AppTitle}">
				<content>
					<Slider id="Slider1" value="{dataModel>/value1}" change="onSliderChange"/>
					<Text text="{path: 'dataModel>/value1'}"/>
					<Slider id="Slider2" value="{model: 'dataModel', path: '/value2'}" change="onSliderChange"/>
					<Text text="{dataModel>/value2}"/>
					<Button text="{i18n>btnText}" tooltip="{i18n>btnTooltip}"/>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>