<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="de.integrata.training.controller.App"
	xmlns="sap.m">
	<App>
		<pages>
			<Page title="{i18n>pgTitle}">
				<content>
					<List
						headerText="{i18n>titleFlightCustomer}"
						growing="true"
						growingScrollToLoad="true"
						items="{
							model: 'flugkundenModel', 
							path: '/FlugkundenSet',
							sorter: {
								path: 'Custname',
								descending: false
							}
						}" >
						<items>
							<ObjectListItem 
								title="{flugkundenModel>Custname}">
								<attributes>
									<ObjectAttribute title='StraÃŸe' text="{flugkundenModel>Street}"/>
									<ObjectAttribute title="Stadt" text="{flugkundenModel>City}"/>
								</attributes>
							</ObjectListItem>
						</items>
					</List>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>